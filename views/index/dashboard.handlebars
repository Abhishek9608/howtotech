<table class="table">
    <thead>
        <th>Title</th>
        <th>Category</th>
        <th>AllowComments</th>
        <th>date</th>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{title}}</td>
            <td>{{category}}</td>
            <td>{{allowComments}}</td>
            <td>{{date}}</td>
            <td><a href="/posts/edit/{{_id}}" class="btn btn-success">Edit</a> <a href="/posts/delete/{{_id}}"
                    class="btn btn-danger">Delete</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
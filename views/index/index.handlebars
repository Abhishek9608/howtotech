<h1 class="py-3 section_header">Latest Posts</h1>
<hr>
<div class="my-3 my-sm-4">
    <div class="row">
        {{#each posts}}
        <div class="col-md-6 col-lg-4 py-3 py-sm-0 p-sm-2">
            <div class="post">
                <a href="/posts/show/{{_id}}">
                    <div class="card">
                        <img src="https://lorempixel.com/400/250" class="card-img" alt="...">
                        <div class="post-category text-white">
                            <a href="/posts?category={{category}}">category</a>
                        </div>
                        <div class="card-body">
                            <div class="pb-3 text-muted">
                                <small>{{getDate date}}</small>
                            </div>
                            <h3 class="card-title post-header">{{title}}</h3>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        {{/each}}
    </div>
</div>
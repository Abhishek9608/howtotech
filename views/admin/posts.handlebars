{{>_admin_header}}

<div class="py-3">
    <table class="table table-responsive">
        <thead>
            <th>Title</th>
            <th>Category</th>
            <th>Status</th>
            <th>AllowComments</th>
            <th>date</th>
        </thead>
        <tbody>
            {{#each posts}}
            <tr>
                <td>{{title}}</td>
                <td>{{category}}</td>
                <td>{{status}}</td>
                <td>{{allowComments}}</td>
                <td>{{dateString date}}</td>
                <td>
                    <div class="d-flex">
                        <span class="pr-2"><a href="/posts/edit/{{_id}}"
                                class="btn-sm btn-success no_underline">Edit</a></span>
                        <span><a href="/posts/delete/{{_id}}" class="btn-sm btn-danger no_underline">Delete</a></span>
                    </div>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>